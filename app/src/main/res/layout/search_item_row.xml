<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@drawable/search_bg"
    android:elevation="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/search_item_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:shapeAppearanceOverlay="@style/RoundSquareImage"
        tools:src="@color/medium_gray"
        android:scaleType="fitXY"
        android:contentDescription="@string/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        tools:text="Search Item Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_item_image" />

    <TextView
        android:id="@+id/search_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        tools:text="2022-10-22"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/search_item_title"
        app:layout_constraintStart_toStartOf="@+id/search_item_title"
        app:layout_constraintTop_toBottomOf="@+id/search_item_title" />

    <TextView
        android:id="@+id/search_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/search_item_date"
        app:layout_constraintStart_toStartOf="@+id/search_item_date"
        app:layout_constraintTop_toBottomOf="@+id/search_item_date"
        app:layout_constraintVertical_bias="0.0"
        tools:text="100 USD" />



</androidx.constraintlayout.widget.ConstraintLayout>